= form_for @resume do |f|
  - if @resume.errors.any?
    #error_explanation
      %h2= "#{pluralize(@resume.errors.count, "error")} prohibited this resume from being saved:"
      %ul
        - @resume.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :telephone
    = f.text_field :telephone
  .field
    = f.label :nationality
    = f.text_field :nationality
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
